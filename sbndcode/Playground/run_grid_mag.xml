<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release "v09_06_00">
<!ENTITY releasetag "e19:prof">
<!ENTITY my_version "v1">
<!ENTITY name "sbn_mag">
<!ENTITY tag "sbnd_mag">
<!ENTITY file_type "data">
<!ENTITY run_type "physics">
<!ENTITY PNFSpath "/pnfs/sbnd/resilient/users/mdeltutt/">
<!ENTITY par_momentum "0.2to3">
<!ENTITY mag_field "0.7">
]>


<project name="&name;">

  <!-- Group -->
  <group>sbnd</group>

  <!-- Project size -->
  <numevents>20000</numevents>

  <!-- Operating System -->
  <os>SL7</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC</resource>

  <!-- Larsoft information -->
  <larsoft>
    <tag>&release;</tag>
    <qual>&releasetag;</qual>
    <local>&PNFSpath;Tarballs/sbndcode_v09_06_00_mag__&my_version;.tgz</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gen">
    <fcl>prodsingle_mag_sbdn_pdg11_&par_momentum;GeV.fcl</fcl>
    <fcl>standard_g4_sbnd_mag&mag_field;Ty.fcl</fcl>
    <fcl>standard_detsim_sbnd.fcl</fcl>
    <!-- <fcl>standard_reco_sbnd_basic.fcl</fcl> -->
    <fcl>standard_reco1reco2_sbnd.fcl</fcl>
    <fcl>run_playground.fcl</fcl>
    <!-- <inputlist>&PNFSpath;cosmics_corsika_cmc_uboone_intime_v06_26_01.txt</inputlist> -->
    <defname>&name;_&tag;_mag</defname>
    <maxfilesperjob>1</maxfilesperjob>
    <!-- <maxfluxfilemb>0</maxfluxfilemb>--> <!-- bs fix for project.py -->
    <outdir>/pnfs/sbnd/scratch/users/mdeltutt/&release;/mag_pdg11_&par_momentum;GeV_mag&mag_field;Ty_&my_version;</outdir>
    <workdir>&PNFSpath;grid_workdir_sbnd/mag_pdg11_&par_momentum;GeV_mag&mag_field;Ty_&my_version;</workdir>
    <numjobs>400</numjobs>
    <datatier>generated</datatier>
    <memory>2000</memory>
    <jobsub>  --expected-lifetime=20h -Q --generate-email-summary </jobsub>
    <disk>60GB</disk>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
